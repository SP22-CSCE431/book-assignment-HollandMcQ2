<h1>New Book</h1>

<%= form_with model: @book do |form| %>
    <div>
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
  
    <div>
      <%= form.label :author %>
      <%= form.text_field :author %>
    </div>

    <div>
      <%= form.label :price %>
      <%= form.number_field :price %>
    </div>

    <div>
      <%= form.label :date_published %>
      <%= form.date_select :date_published ,:start_year => 1900%>
    </div>

    <div>
      <%= form.submit %>
    </div>
<% end %>

<%= link_to 'Back', books_path %>
